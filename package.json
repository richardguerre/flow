{
  "name": "flow",
  "version": "1.0.0",
  "private": true,
  "author": "@richardguerre",
  "license": "MIT",
  "workspaces": [
    "apps/*",
    "packages/*",
    "plugins/*",
    "plugin-apps/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "db:dev": "bun run db:dev -w apps/server",
    "db:reset": "bun run db:reset -w apps/server",
    "db:seed": "bun run db:seed -w apps/server",
    "build": "bun run unocss && turbo run build && bun run post-build -w apps/server",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "---------patch---------": "",
    "postinstall": "bunx patch-package",
    "-------codespaces-------": "",
    "codepsaces": "bun run env:codespaces && bun run db:reset",
    "env:codespaces": "turbo run env:codespaces",
    "---------util---------": "",
    "clean": "bun run clean:root && bun run clean:apps && bun run clean:packages",
    "clean:root": "rm -rf ./node_modules",
    "clean:apps": "rm -rf ./apps/**/node_modules",
    "clean:packages": "rm -rf ./packages/**/node_modules",
    "relay": "bun run relay -w apps/web",
    "unocss": "unocss"
  },
  "devDependencies": {
    "bun-types": "1.0.4",
    "dotenv": "^16.0.2",
    "dotenv-expand": "^9.0.0",
    "patch-package": "^6.0.2",
    "prettier": "^2.8.8",
    "prettier-plugin-tailwindcss": "^0.2.8",
    "turbo": "^1.10.4",
    "typescript": "5.2.2"
  },
  "prettier": {
    "printWidth": 100
  }
}
