  // BIWEEKLY_WEDNESDAY
  // BIWEEKLY_THURSDAY
  // BIWEEKLY_FRIDAY
  // BIWEEKLY_SATURDAY
  // BIWEEKLY_SUNDAY
  // TRIWEEKLY_MONDAY
  // TRIWEEKLY_TUESDAY
