// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/javascript-node-postgres
{
  "name": "Default", // this is the default container for working in the project
  "dockerComposeFile": "docker-compose.yml",
  "service": "app",
  "workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}",
  "postCreateCommand": "bun install && bun run codespaces",
  "forwardPorts": [
    3000, // apps/web
    4000, // apps/server
    5432, // postgres
    5555 // prisma studio
  ],
  "customizations": {
    "vscode": {
      "extensions": [
        // The following were added to make the DX better for everyone,
        // not by individual preference.
        "esbenp.prettier-vscode",
        "Prisma.prisma",
        "meta.relay",
        "antfu.unocss"
      ]
    }
  },
  "postAttachCommand": {
    "server": "cd apps/server && bun run dev",
    "web": "cd apps/web && bun run dev",
    "prisma": "cd apps/server && npx prisma studio"
    // "relay": "cd apps/web && bun run relay:watch" // TODO: install watchman as part of docker containre to make this work
  }

  // Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
  // "remoteUser": "root"
}
