{
  "root": ".",
  "excludes": ["**/node_modules/**", "**/__mocks__/**", "**/__gen__/**"],
  "sources": {
    "apps/web/src": "web",
    "apps/mobile-pwa/src": "mobile-pwa"
  },
  "projects": {
    "web": {
      "schema": "packages/relay/schema.graphql",
      "output": "apps/web/src/relay/__gen__",
      "language": "typescript",
      "schemaExtensions": ["apps/web/src/relay/local"],
      "eagerEsModules": true,
      "noFutureProofEnums": true,
      "requireCustomScalarTypes": true,
      "customScalarTypes": {
        "Date": "string",
        "DateTime": "string",
        "PositiveInt": "number",
        "JSON": "JsonValue",
        "Time": "string"
      }
    },
    "mobile-pwa": {
      "schema": "packages/relay/schema.graphql",
      "output": "apps/mobile-pwa/src/relay/__gen__",
      "language": "typescript",
      "eagerEsModules": true,
      "noFutureProofEnums": true,
      "requireCustomScalarTypes": true,
      "customScalarTypes": {
        "Date": "string",
        "DateTime": "string",
        "PositiveInt": "number",
        "JSON": "JsonValue",
        "Time": "string"
      }
    }
  }
}
